{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/spa",
  "framework": null,
  "headers": [
    {
      "source": "/assets/:all*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/illustrations/:all*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/:match*", "destination": "/api/:match*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "github": {
    "silent": true
  }
}
